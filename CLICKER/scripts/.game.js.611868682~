function loadVariabeValues() {
  document.getElementById("gameInfo").innerHTML = gameVersion;
  let oneCpsPrice = localStorage.getItem('1 cps price');
  let twenFiveCpsPrice = localStorage.getItem('25 cps price');
  let hundredCpsPrice = localStorage.getItem('100 cps price');
  let fiveHundredCpsPrice = localStorage.getItem('500 cps price');
  let thousandCpsPrice = localStorage.getItem('1k cps price');
  let fiftyThousandCpsPrice = localStorage.getItem('50k cps price');
  let oneCpcPrice = localStorage.getItem('1 cpc price');
  let tenCpcPrice = localStorage.getItem('10 cpc price');
  let fiftyCpcPrice = localStorage.getItem('50 cpc price');
  let thousandCpcPrice = localStorage.getItem('1k cpc price');
  let hundredThousandCpcPrice = localStorage.getItem('100k cpc price');
  let millionCpcPrice = localStorage.getItem('1m cpc price');
  let doSaveData = localStorage.getItem("doSaveData");
  if (doSaveData == 'true') {
    cash = localStorage.getItem("cash");
    clickValue = localStorage.getItem("clickValue");
    cashPerSecond = localStorage.getItem("cashPerSecond");
    let totalCashSavedata = localStorage.getItem("total cash");
    // Load Cash
    if (parseInt(cash) && cash != null) {
      cashNoDisplay.innerHTML = cash;
      updateCashDisplay();
    } else {
      localStorage.setItem("cash", '0');
      cash = 0;
      updateCashDisplay();
    }
    if (parseInt(totalCashSavedata) && totalCashSavedata != null) {
      totalCash = parseInt(totalCashSavedata);
    } else {
      localStorage.setItem("cash", '0');
      totalCash = 0;
    }
    // Load Cash Per Second
    if (parseInt(cashPerSecond) && cashPerSecond != null) {
      cashPerSecond = parseInt(cashPerSecond);
      updateCashPerSecondDisplay();
    } else {
      localStorage.setItem("cashPerSecond", '0');
      cashPerSecond = 0;
      updateCashPerSecondDisplay();
    }
    // Load Click Value
    if (parseInt(clickValue) && clickValue != null) {
      clickValue = parseInt(clickValue);
    } else {
      localStorage.setItem("clickValue", '1');
      clickValue = 1;
    }
    // Load Shop Prices

    // Cash Per Second Prices

    if (parseInt(oneCpsPrice) && oneCpsPrice != null) {
      oneCashPerSecondPrice = parseInt(oneCpsPrice);
      document.getElementById("plusOneCashSecond").innerHTML = '+1 <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(oneCashPerSecondPrice);
    } else {
      localStorage.setItem("1 cps price", oneCashPerSecondPrice);
    }
    if (parseInt(twenFiveCpsPrice) && twenFiveCpsPrice != null) {
      twenFiveCashPerSecondPrice = parseInt(twenFiveCpsPrice);
      document.getElementById("plusTwenFiveCashSecond").innerHTML = '+1 <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(twenFiveCashPerSecondPrice);
    } else {
      localStorage.setItem("25 cps price", twenFiveCashPerSecondPrice);
    }
    if (parseInt(hundredCpsPrice) && hundredCpsPrice != null) {
      hundredCashPerSecondPrice = parseInt(hundredCpsPrice);
      document.getElementById("plusHundredCashSecond").innerHTML = '+1 <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(hundredCashPerSecondPrice);
    } else {
      localStorage.setItem("100 cps price", hundredCashPerSecondPrice);
    }
    if (parseInt(fiveHundredCpsPrice) && fiveHundredCpsPrice != null) {
      fiveHundredCashPerSecondPrice = parseInt(fiveHundredCpsPrice);
      document.getElementById("plusFivehundredCashSecond").innerHTML = '+1 <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(oneCashPerSecondPrice);
    } else {
      localStorage.setItem("500 cps price", fiveHundredCashPerSecondPrice);
    }
    if (parseInt(thousandCpsPrice) && thousandCpsPrice != null) {
      thousandCashPerSecondPrice = parseInt(thousandCpsPrice);
      document.getElementById("plusThousandCashSecond").innerHTML = '+1 <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(twenFiveCashPerSecondPrice);
    } else {
      localStorage.setItem("1k cps price", thousandCashPerSecondPrice);
    }
    if (parseInt(fiftyThousandCpsPrice) && fiftyThousandCpsPrice != null) {
      fiftythousandCashPerSecondPrice = parseInt(fiftyThousandCpsPrice);
      document.getElementById("plusFiftyThousandCashSecond").innerHTML = '+1 <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(hundredCashPerSecondPrice);
    } else {
      localStorage.setItem("50k cps price", fiftythousandCashPerSecondPrice);
    }
    // Cash Per Click Prices

    if (parseInt(oneCpcPrice) && oneCpcPrice != null) {
      oneCashClickPrice = parseInt(oneCpcPrice);
      document.getElementById("plusOneCashClick").innerHTML = '+1 <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(oneCashClickPrice);
    } else {
      localStorage.setItem("1 cpc price", oneCashClickPrice);
    }
    if (parseInt(tenCpcPrice) && tenCpcPrice != null) {
      tenCashClickPrice = parseInt(tenCpcPrice);
      document.getElementById("plusTenCashClick").innerHTML = '+10 <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(tenCashClickPrice);
    } else {
      localStorage.setItem("10 cpc price", tenCashClickPrice);
    }
    if (parseInt(fiftyCpcPrice) && fiftyCpcPrice != null) {
      fiftyCashClickPrice = parseInt(fiftyCpcPrice);
      document.getElementById("plusFiftyCashClick").innerHTML = '+50 <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(fiftyCashClickPrice);
    } else {
      localStorage.setItem("50 cpc price", fiftyCashClickPrice);
    }
    if (parseInt(thousandCpcPrice) && thousandCpcPrice != null) {
      thousandCashClickPrice = parseInt(thousandCpcPrice);
      document.getElementById("plusThousandCashClick").innerHTML = '+1K <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(oneCashClickPrice);
    } else {
      localStorage.setItem("1k cpc price", thousandCashClickPrice);
    }
    if (parseInt(hundredThousandCpcPrice) && hundredThousandCpcPrice != null) {
      hundredThousandCashClickPrice = parseInt(hundredThousandCpcPrice);
      document.getElementById("plusHundredThousandCashClick").innerHTML = '+100K <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(tenCashClickPrice);
    } else {
      localStorage.setItem("100k cpc price", hundredThousandCashClickPrice);
    }
    if (parseInt(millionCpcPrice) && millionCpcPrice != null) {
      millionCashClickPrice = parseInt(millionCpcPrice);
      document.getElementById("plusMillionCashClick").innerHTML = '+250K <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(fiftyCashClickPrice);
    } else {
      localStorage.setItem("1m cpc price", millionCashClickPrice);
    }
    showNotification('Save Data Has Been Loaded!');
  } else {
    cash = 0;
    clickValue = 1;
    cashPerSecond = 0;
    updateCashDisplay();
    updateCashPerSecondDisplay();
    showNotification('Save Data is off.');
  }
}

// Start Game Audio
function startAudio() {
  if (music) {
    musicAudio.volume = 0.5;
    musicAudio.play();
  } else {
    musicAudio.volume = 0.0;
  }
}

// Save User Progress
function saveProgress() {
  if (saveData == true) {
    localStorage.setItem("cash", Math.round(parseInt(cash)));
    localStorage.setItem("cashPerSecond", cashPerSecond);
    localStorage.setItem("clickValue", clickValue);
    localStorage.setItem("1 cps price", oneCashPerSecondPrice);
    localStorage.setItem("25 cps price", twenFiveCashPerSecondPrice);
    localStorage.setItem("100 cps price", hundredCashPerSecondPrice);
    localStorage.setItem("500 cps price", fiveHundredCashPerSecondPrice);
    localStorage.setItem("1k cps price", thousandCashPerSecondPrice);
    localStorage.setItem("50k cps price", fiftythousandCashPerSecondPrice);
    localStorage.setItem("1 cpc price", oneCashClickPrice);
    localStorage.setItem("10 cpc price", tenCashClickPrice);
    localStorage.setItem("50 cpc price", fiftyCashClickPrice);
    localStorage.setItem("1k cpc price", thousandCashClickPrice);
    localStorage.setItem("100k cpc price", hundredThousandCashClickPrice);
    localStorage.setItem("1m cpc price", millionCashClickPrice);
    localStorage.setItem("total cash", totalCash);
  }
}

// Update Cash Display
function updateCashDisplay() {
  cashNoDisplay.innerHTML = cash;
  if (cash >= 1000) {
    cashDisplay.innerHTML = '<i class="fa-solid fa-coins"></i> ' + formatCount(parseInt(cash));
    shopCash.innerHTML = '<i class="fa-solid fa-coins"></i> ' + formatCount(parseInt(cash));
  } else if (cash < 1) {
    cashDisplay.innerHTML = '<i class="fa-solid fa-coins"></i> ' + '0';
    shopCash.innerHTML = '<i class="fa-solid fa-coins"></i> ' + '0';
  } else {
    cashDisplay.innerHTML = '<i class="fa-solid fa-coins"></i> ' + formatCount(parseInt(cash), 0);
    shopCash.innerHTML = '<i class="fa-solid fa-coins"></i> ' + formatCount(parseInt(cash), 0);
  }
}

// Update Cash Per Second Display
function updateCashPerSecondDisplay() {
  cashPerSecondDisplay.innerHTML = '<i class="fa-solid fa-stopwatch"></i> <i class="fa-solid fa-coins"></i> ' + formatCount(cashPerSecond);
  shopCPS.innerHTML = '<i class="fa-solid fa-stopwatch"></i> <i class="fa-solid fa-coins"></i> ' + formatCount(cashPerSecond);
}

// Update Price on Purchase
function updatePrice(numToUpdate, type) {
  if (type == 'cash per second') {
    if (numToUpdate == '1') {
      document.getElementById("plusOneCashSecond").innerHTML = '+1 <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(oneCashPerSecondPrice);
      localStorage.setItem("1 cps price", oneCashPerSecondPrice);
    }
    if (numToUpdate == '25') {
      document.getElementById("plusTwenFiveCashSecond").innerHTML = '+25 <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(twenFiveCashPerSecondPrice);
      localStorage.setItem("25 cps price", twenFiveCashPerSecondPrice);
    }
    if (numToUpdate == '100') {
      document.getElementById("plusHundredCashSecond").innerHTML = '+100 <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(hundredCashPerSecondPrice);
      localStorage.setItem("100 cps price", hundredCashPerSecondPrice);
    }
    if (numToUpdate == '500') {
      document.getElementById("plusFivehundredCashSecond").innerHTML = '+500 <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(fiveHundredCashPerSecondPrice);
      localStorage.setItem("500 cps price", fiveHundredCashPerSecondPrice);
    }
    if (numToUpdate == '1k') {
      document.getElementById("plusThousandCashSecond").innerHTML = '+1K <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(thousandCashPerSecondPrice);
      localStorage.setItem("1k cps price", thousandCashPerSecondPrice);
    }
    if (numToUpdate == '50k') {
      document.getElementById("plusFiftyThousandCashSecond").innerHTML = '+50K <i class="fa-solid fa-stopwatch"></i>: <i class="fa-solid fa-coins"></i> ' + formatCount(fiftythousandCashPerSecondPrice);
      localStorage.setItem("50k cps price", fiftythousandCashPerSecondPrice);
    }
    showNotification(`Purchased +${numToUpdate} Cash Per Second!`, '4000');
  }
  if (type == 'cash per click') {
    if (numToUpdate == '1') {
      document.getElementById("plusOneCashClick").innerHTML = '+1 <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(oneCashClickPrice);
      localStorage.setItem("1 cpc price", oneCashClickPrice);
    }
    if (numToUpdate == '10') {
      document.getElementById("plusTenCashClick").innerHTML = '+10 <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(tenCashClickPrice);
      localStorage.setItem("10 cpc price", tenCashClickPrice);
    }
    if (numToUpdate == '50') {
      document.getElementById("plusFiftyCashClick").innerHTML = '+50 <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(fiftyCashClickPrice);
      localStorage.setItem("50 cpc price", fiftyCashClickPrice);
    }
    if (numToUpdate == '1k') {
      document.getElementById("plusThousandCashClick").innerHTML = '+1K <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(thousandCashClickPrice);
      localStorage.setItem("1k cpc price", thousandCashClickPrice);
    }
    if (numToUpdate == '100k') {
      document.getElementById("plusHundredThousandCashClick").innerHTML = '+100K <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(hundredThousandCashClickPrice);
      localStorage.setItem("100k cpc price", hundredThousandCashClickPrice);
    }
    if (numToUpdate == '1m') {
      document.getElementById("plusMillionCashClick").innerHTML = '+250K <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(millionCashClickPrice);
      localStorage.setItem("1m cpc price", millionCashClickPrice);
    }
    //createNotificationElement('Purchase Successful!', `Purchased +${numToUpdate} Cash Per Click!`, 5000);
    showNotification(`Purchased +${numToUpdate} Cash Per Click!`, '4000');
  }
  if (type = 'CPS Multiplier') {
    if (numToUpdate == '.01%') {
      document.getElementById("onePercentCashSecondMultiplier").innerHTML = '+0.01% <i class="fa-regular fa-hand-pointer" style="transform: rotate(-30deg);"></i> : <i class="fa-solid fa-coins"></i> ' + formatCount(clickMultiplierPrice);
      localStorage.setItem("Click Multiplier Price", clickMultiplierPrice);
    }
  }
}

// Check if Item Can Be Purchased
function checkShopItem() {
  if (cash >= oneCashPerSecondPrice) {
    document.getElementById("plusOneCashSecond").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusOneCashSecond").style.filter = "brightness(75%)";
  }
  if (cash >= twenFiveCashPerSecondPrice) {
    document.getElementById("plusTwenFiveCashSecond").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusTwenFiveCashSecond").style.filter = "brightness(75%)";
  }
  if (cash >= hundredCashPerSecondPrice) {
    document.getElementById("plusHundredCashSecond").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusHundredCashSecond").style.filter = "brightness(75%)";
  }
  if (cash >= fiveHundredCashPerSecondPrice) {
    document.getElementById("plusFivehundredCashSecond").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusFivehundredCashSecond").style.filter = "brightness(75%)";
  }
  if (cash >= thousandCashPerSecondPrice) {
    document.getElementById("plusThousandCashSecond").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusThousandCashSecond").style.filter = "brightness(75%)";
  }
  if (cash >= fiftythousandCashPerSecondPrice) {
    document.getElementById("plusFiftyThousandCashSecond").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusFiftyThousandCashSecond").style.filter = "brightness(75%)";
  }
  if (cash >= oneCashClickPrice) {
    document.getElementById("plusOneCashClick").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusOneCashClick").style.filter = "brightness(75%)";
  }
  if (cash >= tenCashClickPrice) {
    document.getElementById("plusTenCashClick").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusTenCashClick").style.filter = "brightness(75%)";
  }
  if (cash >= fiftyCashClickPrice) {
    document.getElementById("plusFiftyCashClick").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusFiftyCashClick").style.filter = "brightness(75%)";
  }
  if (cash >= thousandCashClickPrice) {
    document.getElementById("plusThousandCashClick").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusThousandCashClick").style.filter = "brightness(75%)";
  }
  if (cash >= hundredThousandCashClickPrice) {
    document.getElementById("plusHundredThousandCashClick").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusHundredThousandCashClick").style.filter = "brightness(75%)";
  }
  if (cash >= millionCashClickPrice) {
    document.getElementById("plusMillionCashClick").style.filter = "brightness(100%)";
  } else {
    document.getElementById("plusMillionCashClick").style.filter = "brightness(75%)";
  }
  if (cash >= cpsMultiplierPrice) {
    //document.getElementById("onePercentCashSecondMultiplier").style.filter = "brightness(100%)";
  } else {
    //document.getElementById("onePercentCashSecondMultiplier").style.filter = "brightness(75%)";
  }
}

// Toggle Settings
function toggleSwitch(type) {
  if (type == 'music') {
    console.log("Music on (before): " + music);
    if (toggleMusic.checked == true) {
      music = true;
      if (saveData == true) {
        localStorage.setItem("doMusic", "true");
      }
    } else {
      music = false;
      if (saveData == true) {
        localStorage.setItem("doMusic", "false");
      }
    }
    console.log("Music on (After): " + music);
  } else if (type == 'sfx') {
    console.log("SFX on (before): " + soundEffects);
    if (toggleSFX.checked == true) {
      soundEffects = true;
      if (saveData == true) {
        localStorage.setItem("doSoundEffects", "true");
      }
    } else {
      soundEffects = false;
      if (saveData == true) {
        localStorage.setItem("doSoundEffects", "false");
      }
    }
    console.log("SFX on (After): " + soundEffects);
  } else if (type == 'save data') {
      console.log("Save Data on (before): " + saveData);
      if (toggleSaveData.checked == true) {
        saveData = true;
        document.getElementById('exportImportSavedata').style.display = 'block';
        if (saveData == true) {
          localStorage.setItem("doSaveData", "true");
        }
      } else {
        saveData = false;
        document.getElementById('exportImportSavedata').style.display = 'none';
        if (saveData == false) {
          localStorage.clear();
          localStorage.setItem("doSaveData", "false");
        }
      }
      console.log("Save Data on (After): " + saveData);
    }
}

// Open or Close Shop
function shop(action) {
  if (action == 'open') {
    hideNotification();
    document.getElementById("shop").style.width = "100vw";
    document.getElementById("main").style.marginLeft = "100vw";
  }
  if (action == 'close') {
    document.getElementById("shop").style.width = "0vw";
    document.getElementById("main").style.marginLeft = "0vw";
  }
}

// Open or Close Settings
function settings(action) {
  if (action == 'open') {
    hideNotification();
    document.getElementById("settings").style.width = "100vw";
    document.getElementById("main").style.marginLeft = "100vw";
  }
  if (action == 'close') {
    document.getElementById("settings").style.width = "0vw";
    document.getElementById("main").style.marginLeft = "0vw";
  }
}

